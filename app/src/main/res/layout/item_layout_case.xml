<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/small_padding"
    android:layout_marginTop="@dimen/xsmall_padding"
    android:layout_marginRight="@dimen/small_padding"
    android:layout_marginBottom="@dimen/xsmall_padding"
    android:background="@color/black"
    android:backgroundTint="@color/black"
    app:cardCornerRadius="@dimen/xsmall_padding"
    app:cardElevation="@dimen/xsmall_padding">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/case_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:padding="@dimen/small_padding"
            android:text="Case Title"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_text"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_case_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_padding"
            android:text="Case Type:"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/small_padding"
            app:layout_constraintStart_toStartOf="@id/case_title"
            app:layout_constraintTop_toBottomOf="@+id/case_title" />


        <TextView
            android:id="@+id/case_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_padding"
            android:layout_marginTop="@dimen/small_padding"
            android:text="Criminal"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/tv_case_type"
            app:layout_constraintTop_toBottomOf="@+id/case_title" />

        <TextView
            android:id="@+id/tv_court_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Court Name:"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/tv_case_type"
            app:layout_constraintTop_toBottomOf="@+id/tv_case_type" />

        <TextView
            android:id="@+id/court_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_padding"
            android:text="Dhaka High Court"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/tv_court_name"
            app:layout_constraintTop_toBottomOf="@+id/case_type" />

        <TextView
            android:id="@+id/tv_starting_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Starting Date:"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/tv_court_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_court_name" />

        <TextView
            android:id="@+id/starting_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_padding"
            android:text="22/01/2022"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/tv_starting_date"
            app:layout_constraintTop_toBottomOf="@+id/court_name" />

        <TextView
            android:id="@+id/tv_judge_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Judge Name:"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/tv_starting_date"
            app:layout_constraintTop_toBottomOf="@+id/tv_starting_date" />

        <TextView
            android:id="@+id/judge_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_padding"
            android:text="Jabir Bin Osman"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/tv_judge_name"
            app:layout_constraintTop_toBottomOf="@+id/starting_date" />

        <TextView
            android:id="@+id/case_complainant_or_defendant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Complainant:"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/tv_starting_date"
            app:layout_constraintTop_toBottomOf="@+id/tv_judge_name" />

        <TextView
            android:id="@+id/complainant_or_defendant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_padding"
            android:text="Saimul Hoque"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/case_complainant_or_defendant"
            app:layout_constraintTop_toBottomOf="@+id/judge_name" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="@+id/case_complainant_or_defendant"
            app:layout_constraintTop_toBottomOf="@+id/case_complainant_or_defendant" />

        <TextView
            android:id="@+id/tv_opp_party"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Opp. Party:"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/tv_starting_date"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <TextView
            android:id="@+id/opp_party_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_padding"
            android:text="Abid Ahmed Sobhan"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/tv_opp_party"
            app:layout_constraintTop_toBottomOf="@+id/complainant_or_defendant" />

        <TextView
            android:id="@+id/tv_opp_lawyer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Opp. Lawyer:"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/tv_opp_party"
            app:layout_constraintTop_toBottomOf="@+id/tv_opp_party" />

        <TextView
            android:id="@+id/opp_lawyer_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_padding"
            android:text="Sazzad Hossain Sumon"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/tv_opp_lawyer"
            app:layout_constraintTop_toBottomOf="@+id/opp_party_name" />

        <Space
            android:layout_width="0dp"
            android:layout_height="@dimen/small_padding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_opp_lawyer"
            app:layout_constraintTop_toBottomOf="@id/tv_opp_lawyer" />

        <ImageView
            android:id="@+id/btn_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/case_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/black"
            android:src="@drawable/ic_baseline_edit_24"
            android:layout_marginRight="@dimen/small_padding"
            android:layout_marginTop="@dimen/default_margin"
            app:tint="@color/white" />

        <ImageView
        android:id="@+id/btn_close"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_baseline_close_24"
        android:background="@color/black"
        app:tint="@color/white"
        android:layout_marginTop="@dimen/small_padding"
        android:layout_marginRight="@dimen/small_padding"
        app:layout_constraintTop_toBottomOf="@id/btn_edit"/>

        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_baseline_delete_24"
            android:background="@color/black"
            app:tint="@color/white"
            android:layout_marginTop="@dimen/small_padding"
            android:layout_marginRight="@dimen/small_padding"
            app:layout_constraintTop_toBottomOf="@id/btn_close"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>