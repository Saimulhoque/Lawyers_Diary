<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:layout_marginLeft="@dimen/xsmall_padding"
    android:layout_marginTop="@dimen/xsmall_padding"
    android:layout_marginRight="@dimen/xsmall_padding"
    android:layout_marginBottom="@dimen/xsmall_padding"
    app:cardCornerRadius="@dimen/small_padding"
    app:cardElevation="@dimen/xsmall_padding">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/feature_icon"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:src="@drawable/ic_baseline_home_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="@dimen/xsmall_padding"
            android:layout_marginTop="@dimen/small_padding"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/feature_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/feature_icon" />

        <Space
            android:layout_width="0dp"
            android:layout_height="@dimen/default_margin"
            app:layout_constraintEnd_toEndOf="@id/feature_title"
            app:layout_constraintStart_toStartOf="@id/feature_title"
            app:layout_constraintTop_toBottomOf="@id/feature_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>