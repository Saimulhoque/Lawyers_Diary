<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/xlarge_padding</item>
    </style>

    <style name="space_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/xlarge_padding</item>
    </style>

    <style name="close_icon_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:src">@drawable/ic_baseline_close_24</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="dialog_top_view_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="dialog_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="autocomplete_textview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">none</item>
    </style>

    <style name="dropdown_textinput_layout_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/medium_padding</item>
    </style>

    <style name="textinput_layout_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/medium_padding</item>
    </style>

    <style name="profile_pic">
        <item name="android:layout_width">@dimen/profile_photo</item>
        <item name="android:layout_height">@dimen/profile_photo</item>
        <item name="android:layout_marginTop">@dimen/xlarge_padding</item>
        <item name="civ_border_color">@color/black</item>
    </style>
</resources>